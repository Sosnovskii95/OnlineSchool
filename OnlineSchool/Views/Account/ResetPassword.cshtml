@model OnlineSchool.Models.AccountModel.RegisterModel
@{
    ViewData["Title"] = "Восстановление пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="ResetPassword" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <div class="form-group mb-3">
                    <label asp-for="EmailClient" class="control-label"></label>
                    <input asp-for="EmailClient" class="form-control" />
                    <span asp-validation-for="EmailClient" class="text-danger" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NumberPhone" class="control-label"></label>
                    <input type="text" asp-for="NumberPhone" class="form-control" />
                    <span asp-validation-for="NumberPhone" class="text-danger" />
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Запросить" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
