@model OnlineSchool.Models.AccountModel.RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="EmailClient" class="control-label"></label>
                <input asp-for="EmailClient" class="form-control" />
                <span asp-validation-for="EmailClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LoginClient" class="control-label"></label>
                <input asp-for="LoginClient" class="form-control" />
                <span asp-validation-for="LoginClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordClient" class="control-label"></label>
                <input asp-for="PasswordClient" class="form-control" />
                <span asp-validation-for="PasswordClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FirstLastNameClient" class="control-label"></label>
                <input asp-for="FirstLastNameClient" class="form-control" />
                <span asp-validation-for="FirstLastNameClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberPhone" class="control-label"></label>
                <input asp-for="NumberPhone" class="form-control" />
                <span asp-validation-for="NumberPhone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Регистрация" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
