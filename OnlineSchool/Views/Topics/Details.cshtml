@using System.Security.Claims
@model OnlineSchool.Models.DBModel.Topic

@{
    ViewData["Title"] = "Информация";
    var role = User.FindFirstValue(ClaimsIdentity.DefaultRoleClaimType);
    switch (role)
    {
        case "admin": Layout = "~/Views/Shared/Admin_Layout.cshtml"; break;
        case "metodist" : Layout = "~/Views/Shared/Metodist_Layout.cshtml"; break;
    };
}

<h1>Информация</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TitleTopic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TitleTopic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionTopic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionTopic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image.Id)
        </dd>
    </dl>
</div>
<div class="form-group mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" role="button" class="btn btn-outline-primary">Редактировать</a>
    <a asp-action="Index" role="button" class="btn btn-outline-secondary">Вернуться к списку</a>
</div>
