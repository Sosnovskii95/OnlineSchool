@model IEnumerable<OnlineSchool.Models.ViewCustomModel.CourseProgressViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Client_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Добро пожаловать в онлайн школу русского языка!</h1>

    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <a asp-action="Edit" role="button" class="btn btn-primary">Редактровать личные данные</a>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Мой прогресс</h3>
        @foreach (var item in Model)
        {
            <div>
                <label>Курс: @item.Course.TitleCourse</label>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @item.Progress%" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress%</div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3>Мои курсы</h3>
        @foreach (var item in Model)
        {
            <div>
                <a asp-action="ShowCourse" asp-route-id="@item.Course.Id">@item.Course.TitleCourse</a>
            </div>
        }
    </div>
</div>
