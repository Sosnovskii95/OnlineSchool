@model OnlineSchool.Models.DBModel.Course

@{
    ViewData["Title"] = "ShowCourse";
    Layout = "~/Views/Shared/Client_Layout.cshtml";
}

<h1>ShowCourse</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TitleCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TitleCourse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionCourse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img class="img-thumbnail" src="@Url.Action("GetImage", "PersonalArea", new {id = Model.Id, typeImage="course"})" />
        </dd>
    </dl>
</div>
@foreach(var item in Model.Topics){
    <div>
        <a asp-action="ShowTopic" asp-route-id="@item.Id">@item.TitleTopic</a>
    </div>
}