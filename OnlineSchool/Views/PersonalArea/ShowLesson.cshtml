@model OnlineSchool.Models.DBModel.Lesson

@{
    ViewData["Title"] = "ShowLesson";
    Layout = "~/Views/Shared/Client_Layout.cshtml";
}

<h1>ShowLesson</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URLVideo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URLVideo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic.Id)
        </dd>
    </dl>
</div>
@if (Model.TestLessons.Count() > 0)
{
    <div>
        <a asp-action="RunTest" asp-route-idLesson="@Model.Id">Начать тест</a>
    </div>
}
else
{
    <div>
        <label>Тесты скоро появяться</label>
    </div>
}
