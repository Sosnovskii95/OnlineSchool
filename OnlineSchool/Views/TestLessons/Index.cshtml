@model IEnumerable<OnlineSchool.Models.DBModel.TestLesson>

@{
    ViewData["Title"] = "Список тестов";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Список тестов</h1>
<hr />
<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lesson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerThree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerFour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerFive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RightAnswer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lesson.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerOne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerTwo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerThree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerFour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerFive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RightAnswer)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
