@using System.Security.Claims
@model OnlineSchool.Models.DBModel.Lesson

@{
    ViewData["Title"] = "Удаление урока";
    var role = User.FindFirstValue(ClaimsIdentity.DefaultRoleClaimType);
    switch (role)
    {
        case "admin": Layout = "~/Views/Shared/Admin_Layout.cshtml"; break;
        case "teacher": Layout = "~/Views/Shared/Teacher_Layout.cshtml"; break;
    };
}

<h1>Вы действительно хотите удалить?</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URLVideo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URLVideo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic.Id)
        </dd>
    </dl>

    <div class="form-group mb-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться к списку</a>
        </form>
    </div>
</div>
