@model IEnumerable<OnlineSchool.Models.DBModel.Lesson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Список уроков</h1>

<p>
    <a asp-action="Create">Добавить урок</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleLesson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionLesson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URLVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleLesson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionLesson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URLVideo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удаление</a>
                </td>
            </tr>
        }
    </tbody>
</table>
