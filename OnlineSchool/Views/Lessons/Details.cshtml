@using System.Security.Claims
@model OnlineSchool.Models.DBModel.Lesson

@{
    ViewData["Title"] = "Информация";
    var role = User.FindFirstValue(ClaimsIdentity.DefaultRoleClaimType);
    switch (role)
    {
        case "admin": Layout = "~/Views/Shared/Admin_Layout.cshtml"; break;
        case "teacher": Layout = "~/Views/Shared/Teacher_Layout.cshtml"; break;
    };
}

<h1>Информация</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionLesson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionLesson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URLVideo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URLVideo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic.TitleTopic)
        </dd>
    </dl>
</div>
@if (Model.URLVideo != null)
{
    <div class="col-md-8">
        <div class="ratio ratio-16x9">
            <iframe id="frame" src="@Model.URLVideo"></iframe>
        </div>
    </div>
}
<div class="form-group mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" role="button" class="btn btn-outline-primary">Редактировать</a>
    <a asp-action="Index" role="button" class="btn btn-outline-secondary">Вернуться к списку</a>
</div>