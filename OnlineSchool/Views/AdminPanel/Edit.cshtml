@using System.Security.Claims
@model OnlineSchool.Models.DBModel.User

@{
    ViewData["Title"] = "Edit";
    var role = User.FindFirstValue(ClaimsIdentity.DefaultRoleClaimType);
    switch (role)
    {
        case "admin": Layout = "~/Views/Shared/Admin_Layout.cshtml"; break;
        case "teacher": Layout = "~/Views/Shared/Teacher_Layout.cshtml"; break;
        case "metodist" : Layout = "~/Views/Shared/Metodist_Layout.cshtml"; break;
    };
}

<h1>Редактирование личных данных</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ActiveUser" />
            <div class="form-group mb-3">
                <label asp-for="EmailUser" class="control-label"></label>
                <input asp-for="EmailUser" class="form-control" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordUser" class="control-label"></label>
                <input asp-for="PasswordUser" class="form-control" />
                <span asp-validation-for="PasswordUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullNameUser" class="control-label"></label>
                <input asp-for="FullNameUser" class="form-control" />
                <span asp-validation-for="FullNameUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться назад</a>
            </div>
        </form>
    </div>
</div>

